<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="llf.llf.mapper.PostLikeMapper">

    <resultMap id="BaseResultMap" type="llf.llf.pojo.PostLike">
        <id property="id" column="id" jdbcType="INTEGER"/>
        <result property="postId" column="post_id" jdbcType="INTEGER"/>
        <result property="userId" column="user_id" jdbcType="INTEGER"/>
        <result property="createTime" column="create_time" jdbcType="TIMESTAMP"/>
    </resultMap>

    <!-- 添加点赞 -->
    <insert id="addLike">
        INSERT INTO post_like (post_id, user_id, create_time)
        VALUES (#{postId}, #{userId}, NOW())
    </insert>

    <!-- 取消点赞 -->
    <delete id="removeLike">
        DELETE FROM post_like 
        WHERE post_id = #{postId} AND user_id = #{userId}
    </delete>

    <!-- 检查用户是否已点赞 -->
    <select id="checkUserLike" resultType="int">
        SELECT COUNT(1) 
        FROM post_like 
        WHERE post_id = #{postId} AND user_id = #{userId}
    </select>

    <!-- 获取用户点赞的文章ID列表 -->
    <select id="getUserLikedPostIds" resultType="int">
        SELECT post_id 
        FROM post_like 
        WHERE user_id = #{userId}
        <if test="postIds != null and postIds.size() > 0">
            AND post_id IN
            <foreach collection="postIds" item="id" open="(" separator="," close=")">
                #{id}
            </foreach>
        </if>
    </select>

    <!-- 获取文章的点赞数量 -->
    <select id="getLikeCount" resultType="int">
        SELECT COUNT(1) 
        FROM post_like 
        WHERE post_id = #{postId}
    </select>

</mapper>
